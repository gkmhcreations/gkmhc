<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/splash_text_top"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="3"
            android:minHeight="64dp"
            android:gravity="center_horizontal|bottom"
            android:text="@string/splash_screen_banner"
            android:textColor="#0000FF"
            android:textSize="24sp"
            android:maxLines="3" />

        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/about_background"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:minHeight="720dp"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:gravity="start|center_vertical"
            android:justificationMode="inter_word"
            android:text="@string/humble_namaskarams"
            android:textColor="@color/maroon"
            android:textSize="20sp"
            android:lineSpacingExtra="10dp"
            android:scrollbars="vertical"
            android:maxLines="300" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:minHeight="64dp"
            android:gravity="center_horizontal|center"
            android:text="@string/gkm_copyright"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:maxLines="3" />
    </LinearLayout>
</ScrollView>