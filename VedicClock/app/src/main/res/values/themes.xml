<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VedicClock" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/lightblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan</item>
        <item name="colorSecondaryVariant">@color/lightcyan</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">14sp</item>
        <item name="android:textViewStyle">@style/NPTextViewStyle</item>
    </style>

    <style name="NPTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/noto_serif</item>
    </style>

    <style name="ThemeOverlay.Nithya_Panchangam.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>>
        <item name="android:windowBackground">@drawable/default_background</item>
    </style>
</resources>